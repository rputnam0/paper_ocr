{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://paper-ocr.local/schemas/property_record.schema.json",
  "title": "property_record",
  "type": "object",
  "required": [
    "record_id",
    "doc_id",
    "material_name_raw",
    "property_name_raw",
    "value_raw",
    "unit_raw",
    "source",
    "confidence",
    "extraction_stage",
    "created_at"
  ],
  "properties": {
    "record_id": {"type": "string", "minLength": 1},
    "doc_id": {"type": "string", "minLength": 1},
    "material_name_raw": {"type": "string"},
    "material_name_normalized": {"type": "string"},
    "property_name_raw": {"type": "string"},
    "property_name_normalized": {"type": "string"},
    "value_raw": {"type": "string"},
    "value_numeric": {"type": ["number", "null"]},
    "unit_raw": {"type": "string"},
    "unit_normalized": {"type": "string"},
    "conditions": {"type": "object"},
    "method_context": {"type": "string"},
    "source": {"type": "object"},
    "confidence": {"type": "number", "minimum": 0.0, "maximum": 1.0},
    "extraction_stage": {"type": "string"},
    "created_at": {"type": "string"}
  },
  "additionalProperties": true
}
